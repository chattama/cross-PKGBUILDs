pkgname=linux-raspberrypi-custom
pkgver=3.2.27
pkgrel=2
pkgdesc="The Linux Kernel and modules for Raspberry Pi (customized)"
arch=(arm)
depends=('linux-firmware')
url="http://www.kernel.org/"
license=('GPL2')

_kernel_dir=$startdir/../../kernel/linux

build() {
  cd ${kernel_build_dir}
  make ARCH=arm
}

package() {
  cd ${_kernel_dir}
  make ARCH=arm INSTALL_MOD_PATH=${pkgdir} modules_install firmware_install
  mkdir -p ${pkgdir}/boot
  cp ${_kernel_dir}/arch/arm/boot/zImage ${pkgdir}/boot/kernel.img.${pkgver}-${pkgrel}
}
